<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Friends | LearnFromChef</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="/styles/friends.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  </head>
  <body>

    <% include ../partials/header %>
    <div class="mainPage">
      <div class="container-fluid">
        <div class="row">
          <form class="col-lg-12 col-md-12 col-sm-12 col-xs-12 searchFriend">
            <div class="container-fluid">
              <div class="row">
                <div class="search-input col-sm-10 col-xs-10">
                    <input type="text" name="friend" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Search New Friend with Username</label>
                    <span class="glyphicon glyphicon-search"></span>
                    <span class="glyphicon glyphicon-remove"></span>
                </div>
              </div>
            </div>
          </form>
        </div>

        <p style="display:none" class="returnFriendStatus"></p>
        <div class="container displaySearchResult" style="display:none">
          <div class="row">
            <div class="col-xs-12">
              <p class="username"></p>
              <p class="ranking"></p>
              <p class="rating"></p>
              <p class="institute"></p>
              <button class="btn btn-success confirmFriend">Confirm Adding Friend</button>
            </div>
          </div>
        </div>

        <br>
        <br>

        <div class="row">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Global Ranking</th>
                <th>Username</th>
                <th>Codechef Rating</th>
                <th>Institute</th>
                <th>Profile</th>
                <th>Remove Friend</th>
              </tr>
            </thead>

            <tbody class="tableData">
            <% for(var i=0;i < friends.length; i++){ %>

                <% var number = parseInt(friends[i]['band']['0']); %>
                <% if(number == 1)
                    color="grey";
                   else if(number == 2)
                    color="green";
                  else if(number == 3)
                      color="blue";
                  else if(number == 4)
                    color= "purple";
                  else if(number == 5)
                    color= "yellow";
                  else if(number == 6)
                    color= "orange";
                  else if(number == 7)
                    color= "red";
                  else
                    color="black";
                %>

              <tr>
                <td><%= friends[i]['ranking'] %></td>
                <td><span class="rating" style="display: inline-block;
                      font-size: 10px;
                      background: <%= color %>;
                      padding: 0 3px;
                      line-height: 1.3;
                      color: white;
                      margin-right: 2px;"> <%= number %>â˜…</span><span class="username"><%= friends[i]['username'] %></span></td>
                <td><%= friends[i]['rating'] %></td>
                <td><%= friends[i]['institute'] %></td>
                <td>
                  <a class="profileLink" href="https://codechef.com/users/<%= friends[i]['username'] %>"><button type="button" class="btn btn-sm btn-info">View on Codechef</button></a>
                </td>
                <td class="removeFriend">
                  <span class="glyphicon glyphicon-remove"></span>
                </td>
              </tr>

            <% } %>


            </tbody>
          </table>
        </div>
      </div>
    </div>


    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript">
      var currUser = "<%= user %>";
      var confirmed = false;
    </script>
    <script type="text/javascript" src="/scripts/friends.js"></script>
  </body>
</html>
